# DnD Brand Production Environment Configuration
# Rename this file to .env for production use

# Node Environment
NODE_ENV=production

# Server Configuration
PORT=443
HTTP_PORT=80

# MongoDB Connection
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/dndbrand?retryWrites=true&w=majority

# JWT Configuration
JWT_SECRET=your_very_secure_jwt_secret_key_for_production
JWT_EXPIRE=30d
JWT_COOKIE_EXPIRE=30

# SSL Certificate Paths
SSL_KEY_PATH=/etc/letsencrypt/live/dndbrand.com/privkey.pem
SSL_CERT_PATH=/etc/letsencrypt/live/dndbrand.com/fullchain.pem

# Payment Gateway (iyzico)
IYZICO_API_KEY=your_iyzico_api_key
IYZICO_SECRET_KEY=your_iyzico_secret_key
IYZICO_BASE_URL=https://api.iyzipay.com

# Email Configuration
EMAIL_SERVICE=gmail
EMAIL_USERNAME=your_email@gmail.com
EMAIL_PASSWORD=your_app_password
EMAIL_FROM=noreply@dndbrand.com
EMAIL_FROM_NAME=DnD Brand

# Security
RATE_LIMIT_WINDOW_MS=15000
RATE_LIMIT_MAX=100
CORS_ORIGIN=https://dndbrand.com,https://www.dndbrand.com,https://saltukxx.github.io 